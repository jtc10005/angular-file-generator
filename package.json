{
    "name": "angular-file-generator",
    "displayName": "angular-file-generator",
    "description": "generate angular 2+ files similar to CLI",
    "version": "0.0.1",
    "publisher": "jtc10005",
    "engines": {
        "vscode": "^1.20.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.ngGenerate"
    ],
    "main": "./out/extension",
    "contributes": {
        "keybindings": [
            {
                "command": "extension.ngGenerate",
                "key": "ctrl+alt+g",
                "mac": "cmd+alt+g",
                "when": "editorTextFocus"
            }
        ],
        "commands": [
            {
                "command": "extension.ngGenerate",
                "title": "Generate Angular Component",
                "category": "Angular Generate"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "when": "explorerResourceIsFolder",
                    "command": "extension.ngGenerate",
                    "group": "ngGenerateGroup@1"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
